<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>ValidateProductServlet</servlet-name>
        <servlet-class>product.ValidateProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewProductServlet</servlet-name>
        <servlet-class>product.NewProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newUserAccount</servlet-name>
        <servlet-class>Users.newUserAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateUserCreationServlet</servlet-name>
        <servlet-class>Users.ValidateUserCreationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Users.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewProductServlet</servlet-name>
        <url-pattern>/NewProductServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewProductsServlet</servlet-name>
        <servlet-class>product.ViewProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProductsServlet</servlet-name>
        <url-pattern>/ViewProductsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newUserAccount</servlet-name>
        <url-pattern>/newUserAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateUserCreationServlet</servlet-name>
        <url-pattern>/ValidateUserCreationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
